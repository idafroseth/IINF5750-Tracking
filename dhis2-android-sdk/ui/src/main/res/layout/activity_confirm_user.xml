<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="390dp"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp">

        <include layout="@layout/progress_bar_circular_blue" />

        <LinearLayout
            android:id="@+id/container_re_log_in_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_default"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <org.hisp.dhis.android.sdk.ui.views.FontEditText
                    android:id="@+id/edittext_username"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_custom_shape"
                    android:drawableLeft="@drawable/ic_username"
                    android:drawablePadding="8dp"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    app:font="@string/font_regular" />

                <org.hisp.dhis.android.sdk.ui.views.FontEditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/edittext_custom_shape"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="8dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    app:font="@string/font_regular" />

                <org.hisp.dhis.android.sdk.ui.views.FontButton
                    android:id="@+id/button_re_log_in"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_selector_blue_dark"
                    android:singleLine="true"
                    android:text="@string/re_log_in"
                    android:textColor="@color/white"
                    app:font="@string/font_medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <org.hisp.dhis.android.sdk.ui.views.FontButton
                    android:id="@+id/button_clear_and_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_selector_red"
                    android:singleLine="true"
                    android:text="@string/clear_and_logout"
                    android:textColor="@color/white"
                    app:font="@string/font_medium" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>